@{Layout = null;}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <!-- Include quicklink from dist -->
    <script src="/quicklink.umd.js"></script>
    <!-- Initialize (you can do this whenever you want) -->
    <script>
        quicklink();
    </script>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <!-- 避免IE使用兼容模式 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <!-- 移动设备 viewport -->
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no,minimal-ui">
    <!-- 360浏览器默认使用Webkit内核 -->
    <meta name="renderer" content="webkit">
    <!-- 禁止搜索引擎抓取 -->
    <meta name="robots" content="nofollow">
    <!-- 禁止百度SiteAPP转码 -->
    <meta http-equiv="Cache-Control" content="no-siteapp">
    <!-- Chrome浏览器添加桌面快捷方式（安卓） -->
    <meta name="mobile-web-app-capable" content="yes">
    <!-- Safari浏览器添加到主屏幕（IOS） --
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="">
    <!--[if lt IE 9]>
      <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
      <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!--外部css-->
    <link href="~/Admin/libs/layui/css/layui.css" rel="stylesheet" />
    <link href="~/HzyAdminUI/css/core.css" rel="stylesheet" />
    <link href="~/HzyAdminUI/css/site.css" rel="stylesheet" />
    <link href="~/HzyAdminUI/css/animate.css" rel="stylesheet" />
    <link href="~/HzyAdminUI/libs/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/HzyAdminUI/libs/web-icons-master/css/web-icons.css" rel="stylesheet" />
    <!--my css-->
    <link href="~/HzyAdminUI/css/main.css" rel="stylesheet" />
    @RenderSection("css", required: false)
    <!--基础js-->
    <script src="~/HzyAdminUI/libs/jquery/jquery-2.1.4.min.js"></script>
    <script src="~/HzyAdminUI/libs/popper.min.js"></script>
    <script src="~/HzyAdminUI/libs/bootstrap-4.1.3-dist/js/bootstrap.min.js"></script>
    <script src="~/HzyAdminUI/libs/bootstrap-4.1.3-dist/js/bootstrap.bundle.min.js"></script>
    @{await Html.RenderPartialAsync("~/Areas/Admin/Views/Sys/PowerControl/Index.cshtml");}
</head>
<body class="@ViewBag.BodyClass">
    @RenderBody()
    <script src="~/Admin/libs/layui/layui.all.js"></script>
    <script src="~/Admin/js/admin.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.8/dist/vue.js"></script>
    @RenderSection("js", required: false)
</body>
</html>
