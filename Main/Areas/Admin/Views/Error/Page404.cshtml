@{
    ViewBag.BodyClass = "page-errors layout-full";
}

<div class="site-page">
    <div class="page page-full vertical-align text-center animation-fade page-error">
        <div class="page-content vertical-align-middle">
            <header>
                <h1 class="animation-slide-top">400</h1>
                <p>页面找不到！</p>
            </header>
        </div>
    </div>
</div>
@section css{
    <style type="text/css">
        .page-errors .site-page {
            height: 100vh;
            margin-left: 0
        }

            .page-errors .site-page .page {
                background: 0 0;
                height: 100vh
            }

        .page-errors .error-mark {
            margin-bottom: 33px
        }

        .page-errors header .icon:before {
            font-size: 120px;
            margin-bottom: 20px
        }

        .page-errors header h1 {
            font-size: 120px;
            color: #76838f
        }

        .page-errors header h3 {
            margin-top: 30px
        }

        .page-errors header p {
            margin-bottom: 30px;
            text-transform: uppercase
        }

        main.site-page .page-errors .page-copyright {
            display: none
        }
    </style>
}